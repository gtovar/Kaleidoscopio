
<div class="center hero-unit">
  <h1>Ver contactos</h1>
</div>
<%if @contacts.empty? %>
	<h3> "aún no hay mensajes de contacto" </h3>
<%elsif%>
<table class="table table-bordered">
  <tr>
    <th><%= Contact.human_attribute_name(:name) %></th>
    <th><%= Contact.human_attribute_name(:email) %></th>
    <th><%= Contact.human_attribute_name(:phone) %></th>
    <th><%= Contact.human_attribute_name(:subjects) %></th>
    <th><%= Contact.human_attribute_name(:message) %></th>
    <th>Acciones</th>
  </tr>


<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.email %></td>
    <td><%= contact.phone %></td>
<% asunto = contact.subjects %>
<%case asunto%>
<%when "1"%>
<td>Duda</td>
<%when "2"%>
<td>Queja</td>
<%when "3"%>
<td>Sugerencia</td>
<%when "4"%>
<td>Propuesta</td>
<%when "5"%>
<td>Vacante</td>
<%end%>
    <td><%= truncate (contact.message) %></td>
    <td><%= link_to 'Ver', vercontacto_path(contact) %> -
    <%= link_to 'Eliminar', contact, confirm: '¿Estas seguro?', method: :delete %></td>
  </tr>
<% end %>
<% end %>
</table>

<br />
